{
  "typography": {
    "fontFamily": {
      "serif": "Georgia, Times, 'Times New Roman', serif",
      "sans": "Inter, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif"
    },
    "weights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "sizes": {
      "hero": "2.5rem",
      "subhead": "1.125rem",
      "body": "0.875rem",
      "button": "0.875rem",
      "badge": "0.75rem"
    },
    "lineHeights": {
      "tight": 1.1,
      "normal": 1.5
    }
  },
  "colors": {
    "background": "#FFFFFF",
    "textPrimary": "#111827",
    "textSecondary": "#6B7280",
    "accent": "#F59E0B",
    "buttonBg": "#111827",
    "buttonText": "#FFFFFF",
    "buttonSecondaryBg": "#F3F4F6",
    "buttonSecondaryText": "#374151",
    "badgeBg": "#FEF3C7",
    "badgeText": "#92400E"
  },
  "spacing": {
    "sectionY": "6rem",
    "elementGap": "1.5rem",
    "buttonPaddingY": "0.75rem",
    "buttonPaddingX": "1.5rem",
    "headerPadding": "1.5rem"
  },
  "grid": {
    "container": "max-w-6xl mx-auto px-6",
    "centered": "flex flex-col items-center justify-center text-center",
    "header": "flex items-center justify-between w-full"
  },
  "radius": {
    "button": "0.5rem",
    "badge": "9999px"
  },
  "shadows": {
    "button": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "buttonHover": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)"
  }
}
